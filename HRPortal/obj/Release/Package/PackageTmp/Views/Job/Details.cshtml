@model HRPortal.JOBPOSTING

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isActive =(Model.ISACTIVE == true ? "Active" : "In-Active");
    var jdpath = (Model.JD_FILE_PATH == "" ? "" : Model.JD_FILE_PATH);
    }

<h2 align="center">Job Details</h2>

<div>
    @*<h4>JOB DETAILS</h4>*@
    <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("JOB CODE")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.JOB_CODE)
            </dd>

            <dt>
                @Html.DisplayName("JOB DESCRIPTION")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.JOB_DESCRIPTION)
            </dd>

            <dt>
                @Html.DisplayName("POSITION NAME")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.POSITION_NAME)
            </dd>

            <dt>
                @Html.DisplayName("NO OF VACANCIES")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NO_OF_VACANCIES)
            </dd>

            <dt>
                @Html.DisplayName("TOTAL EXPERIENCE")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.YEARS_OF_EXP_TOTAL)
            </dd>

            <dt>
                @Html.DisplayName("RELEVANT EXPERIENCE")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.YEARS_OF_EXP_RELEVANT)
            </dd>

            <dt>
                @Html.DisplayName("WORK LOCATION")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WORK_LOCATION)
            </dd>
            <dt>
                @Html.DisplayName("JD")
            </dt>
            <dd>
                @if (jdpath == string.Empty)
                {
                    @Html.DisplayName("No JD available")}
                else {
                <a href="@jdpath" target="_blank" title="Click To Download JD">Download</a>
                }
            </dd>
            <dt>
                @Html.DisplayName("COMMENTS")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.COMMENTS)
            </dd>

            <dt>STATUS</dt>
            <dd>
                @isActive
            </dd>

            <dt>
                @Html.DisplayName("LAST MODIFIED BY")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MODIFIED_BY)
            </dd>

            <dt>
                @Html.DisplayName("LAST MODIFIED ON")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MODIFIED_ON)
            </dd>

            <dt>
                @Html.DisplayName("SUBMITTED BY")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CREATED_BY)
            </dd>

            <dt>
                @Html.DisplayName("SUBMITTED ON")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CREATED_ON)
            </dd>

        </dl>
</div>
<p>
@if (Request.QueryString.Count > 0 && Request.QueryString.Count == 1 && Request.QueryString["styp"]=="H")
{
    @Html.ActionLink("Back to List", "Index", "Home")}
else {@Html.ActionLink("Back to List", "Index")}
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.JOB_ID }) |*@ 
</p>
