@model IEnumerable<CANDIDATE>
@{ int sl = 0;}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.CANDIDATE_NAME)
                        </th>
                        <th>
                            YEARS OF EXP.
                        </th>
                        <th>
                            MOBILE
                        </th>
                        <th>
                            EMAIL
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CURRENT_COMPANY)
                        </th>
                        <th>VENDOR</th>
                        <th>
                            PROFILE
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CREATED_ON)
                        </th>
                        <th>STATUS</th>
                        <th colspan="3">ACTION</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(sl = sl + 1) </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CANDIDATE_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.YEARS_OF_EXP_TOTAL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MOBILE_NO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CURRENT_COMPANY)
                            </td>
                            <td>Viruntha</td>
                            <td>
                                <a href="#" title="Click To Download Candidate CV">Download</a>
                            </td>
                            <td>
                                @(item.CREATED_ON != null ? item.CREATED_ON.ToString("dd-MMM-yyyy") : "Empty")<br />
                                <span style="font-size:x-small">@HRPortal.Helper.HelperFuntions.TimeAgo(item.CREATED_ON)</span>
                            </td>
                            <td>
                               <a href="#" title="Click To Change The Status">SCH-R2</a>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Details">
                                    <a href="@Url.Action("Details", "Candidate", new { id = item.CANDIDATE_ID, styp="H" })" class="btn btn-info btn-xs" id="btnJobDetails" value="@item.CANDIDATE_ID">
                                        <span class="glyphicon glyphicon-list"></span>
                                    </a>
                                </p>
                            </td>
                            @*<td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <a href="@Url.Action("Edit", "Candidate", new { id = item.CANDIDATE_ID })" id="btnJobEdit" value="@item.CANDIDATE_ID" class="btn btn-primary btn-xs">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </p>
                            </td>*@

                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Active/Inactive">
                                    <a href="@Url.Action("Delete", "Candidate", new { id = item.CANDIDATE_ID })" class="btn btn-danger btn-xs" id="btnJobDelete" value="@item.CANDIDATE_ID">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </p>
                            </td>
                        </tr>
                    }
                    <tr><td align="right" class="" colspan="12">@Model.Count() Record(s) found.</td></tr>
                </table>
                <div class="clearfix"></div>
                <ul class="pagination pull-right" align="right">
                    <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                </ul>
            </div>
            </div></div></div>