@model HRPortal.Models.VendorMasterViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Staffing Partner</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
        <div class="form-group form-group-required">
            @Html.Label("PARTNER NAME", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.VENDOR_NAME, new { @class = "form-control", @required = "mandatory" })
                @Html.ValidationMessageFor(m => m.VENDOR_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-group-required">
            @Html.Label("PARTNER SPOC", new { @class = "col-md-2 control-label" })
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.VENDOR_SPOC, new { htmlAttributes = new { @class = "form-control", @required = "mandatory" } })
                @Html.ValidationMessageFor(model => model.VENDOR_SPOC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-group-required">
            @Html.LabelFor(model => model.EMAIL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", @required = "mandatory" } })
                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-group-required">
            @Html.Label("CONTACT NO", new { @class = "col-md-2 control-label" })
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.VENDOR_CONTACT_NO, new { htmlAttributes = new { @class = "form-control", @required = "mandatory" } })
                @Html.ValidationMessageFor(model => model.VENDOR_CONTACT_NO, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group form-group-required hide">
            @Html.Label("PARTNER TYPE", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <div class="checkbox">
                        <span><input type="radio" id="rdoTypeB" name="PartnerType" checked="checked" value="B" />Both</span>
                        <span><input type="radio" id="rdoTypeP" name="PartnerType" value="P" />Permanent</span>
                        <span><input type="radio" id="rdoTypeC" name="PartnerType" value="C" />Contract</span>
                    </div>
                </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
    <br /><br /><br /><br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
