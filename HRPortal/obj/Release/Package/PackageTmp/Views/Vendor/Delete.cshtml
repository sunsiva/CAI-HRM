@model HRPortal.VENDOR_MASTER

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>De-Activate Staffing Partner</h2>

<h3>Are you sure you want to de-activate this?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("PARTNER NAME")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VENDOR_NAME)
        </dd>

        <dt>
            @Html.DisplayName("PARTNER SPOC")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VENDOR_SPOC)
        </dd>
        <dt>
            @Html.DisplayName("EMAIL")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>

        <dt>
            @Html.DisplayName("CONTACT NO")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VENDOR_CONTACT_NO)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="De-Activate" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
