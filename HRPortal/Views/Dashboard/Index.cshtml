                            <div class="col-md-11" align="center">
                                <br />
                                <div id="srchReportCriteria">
                                    @Html.DropDownList("ddlCriteriaVendor", (SelectList)ViewBag.VendorList, new { multiple = "multiple" }) <br />
                                    <input type="checkbox" id="chkScreenSub" checked value="Screening Submitted" /> Screening
                                    <input type="checkbox" id="chkR1" name="chkR1" checked value="Round1"> Round1
                                    <input type="checkbox" id="chkR2" checked value="Round2" /> Round2
                                    <input type="checkbox" id="chkR3" checked value="Round3" /> Round3 <br />
                                    Export To <a href="#" title="Export To Excel" id="btnExport" onclick="ExportToExcel()"> <img src="~/Content/images/Excel-icon.png" style="height:35px;width:35px" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
