@model IEnumerable<HRPortal.Models.RegisterViewModel>

@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registered User List</h2>
<br />
<h4 align="right">
    @Html.ActionLink("Create New", "Register", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
</h4>

<table class="table table-striped table-hover table-condensed table-bordered">
    <tr>
        <th>
            EMAIL
        </th>
        <th>
            FIRST NAME
        </th>
        <th>
            LAST NAME
        </th>
        <th>
            PHONE NO.
        </th>
        <th colspan="3">ACTION</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <p data-placement="top" data-toggle="tooltip" title="Edit">
                    <a href="@Url.Action("UserEdit", "Account", new { id = item.Id })" id="btnJobEdit" value="@item.Id" class="btn btn-primary btn-xs">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </p>
            </td>
            @*<td>
                <p data-placement="top" data-toggle="tooltip" title="Delete">
                    <a href="@Url.Action("Delete", "Vendor", new { id = item.VENDOR_ID })" class="btn btn-danger btn-xs" id="btnJobDelete" value="@item.VENDOR_ID">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </p>
            </td>*@

        </tr>
    }
    <tr><td align="right" class="" colspan="5">@Model.Count() Record(s) found.</td></tr>
</table>

