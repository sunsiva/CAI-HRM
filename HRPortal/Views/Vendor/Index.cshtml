@model IEnumerable<HRPortal.VENDOR_MASTER>

@{
    ViewBag.Title = "Staffing Partner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Staffing Partners</h2>
<br />
<h4 align="right">
    @Html.ActionLink("Create New", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
</h4>
<table class="table table-striped table-hover table-condensed table-bordered">
    <tr>
        <th>
            PARTNER NAME
        </th>
        <th>
            PARTNER SPOC
        </th>
        <th>
            EMAIL
        </th>
        <th>
            CONTACT NO
        </th>
        <th>
            STATUS
        </th>
        <th colspan="3">ACTION</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VENDOR_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VENDOR_SPOC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VENDOR_CONTACT_NO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISACTIVE)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VENDOR_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VENDOR_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VENDOR_ID })
        </td>*@
        <td>
            @*<p data-placement="top" data-toggle="tooltip" title="Details">
                <a href="@Url.Action("Details", "Vendor", new { id = item.VENDOR_ID })" class="btn btn-info btn-xs" id="btnJobDetails" value="@item.VENDOR_ID">
                    <span class="glyphicon glyphicon-list"></span>
                </a>
            </p>*@
        </td>
        <td>
                <p data-placement="top" data-toggle="tooltip" title="Edit">
                    <a href="@Url.Action("Edit", "Vendor", new { id = item.VENDOR_ID })" id="btnJobEdit" value="@item.VENDOR_ID" class="btn btn-primary btn-xs">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </p>
        </td>
        <td>
                <p data-placement="top" data-toggle="tooltip" title="Delete">
                    <a href="@Url.Action("Delete", "Vendor", new { id = item.VENDOR_ID })" class="btn btn-danger btn-xs" id="btnJobDelete" value="@item.VENDOR_ID">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </p>
        </td>

    </tr>
}
    <tr><td align="right" class="" colspan="8">@Model.Count() Record(s) Found.</td></tr>
</table>
