@model  IEnumerable<HRPortal.Models.CandidateViewModels>

@{ int sl = 0;}

<div class="container">
        <br />
    @Html.Partial("_SearchCriteria")
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <div id="gridView">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>#</th>
                            <th>
                                @Html.DisplayNameFor(model => model.CANDIDATE_NAME)
                            </th>
                            <th>VENDOR</th>
                            <th>
                                POSITION/SKILL
                            </th>
                            <th>
                                NOTICE_PERIOD
                                /LWD
                            </th>
                            <th>
                                YEARS OF.EXP
                            </th>
                            <th>
                                SUBMISSION DATE
                            </th>
                            <th>
                                LAST MODIFIED BY/ON
                            </th>
                            <th>
                                PROFILE
                            </th>
                            <th>STATUS</th>
                            <th colspan="3">ACTION</th>
                        </tr>

                        @foreach (var item in Model)
                    {
                            <tr>
                                <td>@(sl = sl + 1) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CANDIDATE_NAME)
                                </td>
                                <td>Viruntha</td>
                                <td>@Html.DisplayFor(modelItem => item.POSITION)</td>
                                <td>

                                    @(item.LAST_WORKING_DATE != null ? (item.LAST_WORKING_DATE.Value.ToString("dd-MMM-yyyy")) : item.NOTICE_PERIOD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YEARS_OF_EXP_TOTAL)
                                </td>
                                <td>
                                    @(item.CREATED_ON != null ? item.CREATED_ON.ToString("dd-MMM-yyyy") : "")<br />
                                    <span style="font-size:x-small">@HRPortal.Helper.HelperFuntions.TimeAgo(item.CREATED_ON)</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MODIFIED_BY)/ <br />@(item.MODIFIED_ON != null ? item.MODIFIED_ON.Value.ToString("dd-MMM-yyyy") : "Empty")
                                </td>
                                <td>
                                    <a href="#" title="Click To Download Candidate CV">Download</a>
                                </td>
                                <td>
                                    <a href="#" title="Click To Change The Status">SCH-R2</a>
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Details">
                                        <a href="@Url.Action("Details", "Candidate", new { id = item.CANDIDATE_ID, styp="H" })" class="btn btn-info btn-xs" id="btnJobDetails" value="@item.CANDIDATE_ID">
                                            <span class="glyphicon glyphicon-list"></span>
                                        </a>
                                    </p>
                                </td>
                                @*<td>
                            <p data-placement="top" data-toggle="tooltip" title="Edit">
                                <a href="@Url.Action("Edit", "Candidate", new { id = item.CANDIDATE_ID })" id="btnJobEdit" value="@item.CANDIDATE_ID" class="btn btn-primary btn-xs">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </p>
                        </td>*@

                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Active/Inactive">
                                        <a href="@Url.Action("Delete", "Candidate", new { id = item.CANDIDATE_ID })" class="btn btn-danger btn-xs" id="btnJobDelete" value="@item.CANDIDATE_ID">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a>
                                    </p>
                                </td>
                            </tr>
                    }
                        <tr>
                            <td align="left"><a href="@Url.Action("ExportToExcel","Candidate")" title="Export To Excel" id="btnExport"><img src="~/Content/images/Excel-icon.png" style="height:35px;width:35px" /></a></td>
                            <td align="right" colspan="11" class="">@Model.Count() Record(s) found.</td>
                        </tr>
                    </table>
                </div>
                <div class="clearfix"></div>
                <ul class="pagination pull-right" align="right">
                    <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                </ul>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-menu-1">

                    <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="#" data-number="3">3 per page</a>
                    </li>

                    <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="#" data-number="5" data-default="true">5 per page</a>
                    </li>

                    <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="#" data-number="10">10 per page</a>
                    </li>

                    <li role="presentation" class="divider"></li>

                    <li role="presentation">
                        <a role="menuitem" tabindex="-1" href="#" data-number="all">View All</a>
                    </li>
                </ul>	
            </div>
            </div></div></div>