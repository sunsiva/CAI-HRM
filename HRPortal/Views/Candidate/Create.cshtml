                    <div class="checkbox">
                        <span><input type="radio" id="rdoIsNPYes" name="rdoIsNP" value="Yes" />Yes</span>
                        <span><input type="radio" id="rdoIsNPrNo" name="rdoIsNP" value="No" />No</span>
                        @Html.ValidationMessageFor(model => model.ISINNOTICEPERIOD, "", new { @class = "text-danger" })
