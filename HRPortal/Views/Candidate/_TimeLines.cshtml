@model IEnumerable<HRPortal.Models.CandidateViewModels>

<div class="container">
    <div class="page-header">
        <h1 id="timeline">Timeline</h1>
    </div>
    <ul class="timeline">
        @foreach (var item in Model)
        {
            if (item.STATUS_ID.Contains("SCR-RJ") || item.STATUS_ID.Contains("R1-DROP") || item.STATUS_ID.Contains("R1-RJ")
                || item.STATUS_ID.Contains("R2-DROP") || item.STATUS_ID.Contains("R2-RJ") || item.STATUS_ID.Contains("R3-DROP")
                || item.STATUS_ID.Contains("SCR-FDBP") || item.STATUS_ID.Contains("R1-FDBP") || item.STATUS_ID.Contains("R2-FDBP"))
            {
                <li class="timeline-inverted">
                    <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title"><b> @item.STATUS </b> - @item.MODIFIED_BY </h4>
                            <p>
                                <small class="text-muted">
                                    <i class="glyphicon glyphicon-time"></i> @item.MODIFIED_ON.Value.ToString("dd-MMM-yyyy hh:mm")
                                    [ @HRPortal.Helper.HelperFuntions.TimeAgo(item.MODIFIED_ON.Value) ]
                                </small>
                            </p>
                        </div>
                        <div class="timeline-body">
                            @if (@item.SCHEDULED_TO != null)
                            {
                                <p><b>Scheduled On: </b>@item.SCHEDULED_TO.Value.ToString("dd-MMM-yyyy hh:mm")</p>
                            }
                            <p><b>Status Comments: </b>@item.COMMENTS</p>
                        </div>
                    </div>
                </li>
            }
            else
            {
                <li>
                    <div class="timeline-badge warning"><i class="glyphicon glyphicon-credit-card"></i></div>
                    
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title"><b> @item.STATUS </b> - @item.MODIFIED_BY </h4>
                            <p>
                                <small class="text-muted">
                                    <i class="glyphicon glyphicon-time"></i>
                                    @item.MODIFIED_ON.Value.ToString("dd-MMM-yyyy hh:mm")
                                    [ @HRPortal.Helper.HelperFuntions.TimeAgo(item.MODIFIED_ON.Value)]
                                </small>
                            </p>
                        </div>
                        <div class="timeline-body">
                            @if (@item.SCHEDULED_TO != null)
                            {
                                <p><b>Scheduled On: </b>@item.SCHEDULED_TO.Value.ToString("dd-MMM-yyyy hh:mm")</p>
                            }
                            <p><b>Status Comments: </b>@item.COMMENTS</p>
                        </div>
                    </div>
                </li>
           
            }
        }
        
