@model IEnumerable<HRPortal.CANDIDATE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sl = 0;
}

<h2>Candidates Profile</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @*<h4 align="right">
                @Html.ActionLink("Create New", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
            </h4>*@
            <div class="table-responsive">
                <table class="table table-striped table-hover table-condensed table-bordered">
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.CANDIDATE_NAME)
                        </th>
                        <th>
                            YEARS OF EXP.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MOBILE_NO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EMAIL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CURRENT_COMPANY)
                        </th>
                        <th>
                            NOTICE_PERIOD
                            /LWD
                        </th>
                        <th>
                            @Html.DisplayName("STATUS")
                        </th>
                        <th colspan="3">ACTION</th>
                    </tr>
                 
    @foreach (var item in Model)
    {
    <tr>
        <td>@(sl=sl + 1) </td>
        <td>
            @Html.DisplayFor(modelItem => item.CANDIDATE_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEARS_OF_EXP_TOTAL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MOBILE_NO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CURRENT_COMPANY)
        </td>
        <td>
            @(item.LAST_WORKING_DATE != null ? (item.LAST_WORKING_DATE.Value.ToString("dd-MMM-yyyy")) : item.NOTICE_PERIOD)
        </td>
        <td>
            SCH-R2
        </td>
        <td>
            <p data-placement="top" data-toggle="tooltip" title="Details">
                <a href="@Url.Action("Details", "Candidate", new { id = item.CANDIDATE_ID })" class="btn btn-info btn-xs" id="btnJobDetails" value="@item.CANDIDATE_ID">
                    <span class="glyphicon glyphicon-list"></span>
                </a>
            </p>
        </td>
        <td>
            <p data-placement="top" data-toggle="tooltip" title="Edit">
                <a href="@Url.Action("Edit", "Candidate", new { id = item.CANDIDATE_ID })" id="btnJobEdit" value="@item.CANDIDATE_ID" class="btn btn-primary btn-xs">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </p>
        </td>

        <td>
            <p data-placement="top" data-toggle="tooltip" title="Active/Inactive">
                <a href="@Url.Action("Delete", "Candidate", new { id = item.CANDIDATE_ID })" class="btn btn-danger btn-xs" id="btnJobDelete" value="@item.CANDIDATE_ID">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </p>
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CANDIDATE_ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.CANDIDATE_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CANDIDATE_ID })
        </td>*@
    </tr>
    }
                    <tr><td align="right" class="" colspan="11">@Model.Count() Record(s) found.</td></tr>
                </table>
                <div class="clearfix"></div>
                <ul class="pagination pull-right">
                    <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                </ul>
                </div>
            </div>
        </div>
    </div>
