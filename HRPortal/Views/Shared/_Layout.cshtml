<!DOCTYPE html>
<html>
@{  var isAdmin = User.Identity.Name.ToUpper().Contains("ADMIN") ? "True" : "False";}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HR - Recruitment Process</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
        @*.navbar-inverse { -changed to #337AB7
    .navbar-inverse .navbar-nav > -changed to #F5F5F5
     .navbar-inverse .navbar-nav > li > a:hover, -changed to #000 : These styles has customized for blue color from bootstrap.css*@
    <script src="@Url.Content("http://code.jquery.com/jquery-1.11.0.min.js")"></script> @*TODO:move to script folder.This is for having $ in the script file.*@
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home",new { @class="navbar-brand" })"> <img src="~/Content/images/CAI_Logo1.gif" alt="CAI" /> </a>
                @*@Html.ActionLink("HR - Recruitment Process", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")@*<span class="badge">42</span>*@</li>
                        if (User.Identity.Name.ToUpper().Contains("ADMIN"))
                        {
                        <li>@Html.ActionLink("Job", "Index", "Job")</li>}
                        else {<li>@Html.ActionLink("Candidate", "Index", "Candidate")</li>}
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Recruitment Process Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
