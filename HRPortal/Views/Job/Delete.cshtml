@model HRPortal.JOBPOSTING

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cmnts = Model.COMMENTS;
    Model.COMMENTS = string.Empty;
}

<h2 align="center">De-activate A Job</h2>

<h3>Are you sure you want to de-activate this?</h3>
<div>
    @*<h4>JOBPOSTING</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("JOB CODE")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JOB_CODE)
        </dd>

        <dt>
            @Html.DisplayName("JOB DESCRIPTION")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JOB_DESCRIPTION)
        </dd>

        <dt>
            @Html.DisplayName("POSITION NAME")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.POSITION_NAME)
        </dd>

        <dt>
            @Html.DisplayName("NO OF VACANCIES")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NO_OF_VACANCIES)
        </dd>

        <dt>
            @Html.DisplayName("TOTAL EXPERIENCE")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YEARS_OF_EXP_TOTAL)
        </dd>

        <dt>
            @Html.DisplayName("RELEVANT EXPERIENCE")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YEARS_OF_EXP_RELEVANT)
        </dd>

        <dt>
            @Html.DisplayName("WORK LOCATION")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WORK_LOCATION)
        </dd>

        <dt>
            @Html.DisplayName("COMMENTS")
        </dt>

        <dd>
            @cmnts
        </dd>

        <dt>
            @Html.DisplayName("ISACTIVE")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISACTIVE)
        </dd>
        <dt>
            @Html.DisplayName("LAST MODIFIED ON")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MODIFIED_ON)
        </dd>

        @*<dt>
            @Html.DisplayName("CREATED_BY")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CREATED_BY)
        </dd>*@

        <dt>
            @Html.DisplayName("SUBMITTED ON")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CREATED_ON)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group form-group-required">
            @Html.LabelFor(model => model.COMMENTS, "COMMENTS FOR THIS ACTION", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.COMMENTS, new { @class = "textarea-input-custom", @required = "mandatory" })
                @Html.ValidationMessageFor(model => model.COMMENTS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="De-Activate" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { page = Request.QueryString["p"] })
        </div>
    }
</div>
